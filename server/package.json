{
  "name": "server",
  "version": "1.0.0",
  "main": "src/index.js",
  "scripts": {
    "db-migrate": "npx drizzle-kit migrate",
    "db-generate": "npx drizzle-kit generate",
    "db-clear": "DOTENV_CONFIG_PATH=./.env.test ts-node scripts/clearDb.ts",
    "test": "jest",
    "build": "rm -rf build && tsc -p tsconfig.json && cp .env build/ && cd build && npm i && cd ..",
    "start": "node build/index.js",
    "dev": "nodemon index.ts",
    "lint": "eslint \"**/*.ts\"",
    "lint-fix": "eslint \"**/*.ts\" --fix",
    "format-check": "prettier '{.,{src,tests}/**}/*.{js,json,ts}' -c",
    "format": "prettier --write '{.,{src,tests}/**}/*.{js,json,ts}' --list-different",
    "test-unit": "jest tests/unit",
    "test-func": "DOTENV_CONFIG_PATH=./.env.test jest tests/functional --runInBand",
    "test-coverage": "DOTENV_CONFIG_PATH=./.env.test jest --coverage --runInBand --detectOpenHandles --forceExit --silent"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fastify/cors": "^11.0.0",
    "@fastify/jwt": "^9.0.4",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.40.0",
    "fastify": "^5.2.1",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^4.0.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/config": "^3.3.5",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.5",
    "@types/pg": "^8.11.11",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^0.30.5",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.2.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  },
  "engines" : {
    "node" : ">=22.0.0"
  }
}
